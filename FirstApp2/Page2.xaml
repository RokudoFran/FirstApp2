 <?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp2.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Мой профиль" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Image Source="images.png" HorizontalOptions="Start"/>

            <Label Text="e-mail" HorizontalTextAlignment="Start" TextColor="Black" FontSize="20"/>
            <Label Text="Имя пользователя" HorizontalTextAlignment="Start" TextColor="Black" FontSize="20"/>
            <Label Text="Фамилия пользователя" HorizontalTextAlignment="Start" TextColor="Black" FontSize="20"/>
            <Button Clicked="edit_Clicked" x:Name="edit" Text="Редактировать профиль"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>